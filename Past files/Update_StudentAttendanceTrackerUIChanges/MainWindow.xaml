<Window x:Class="StudentAttendanceTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentAttendanceTracker"
        mc:Ignorable="d"
        Title="Welcome" Height="717.937" Width="1028.192" WindowState="Maximized">
    <Grid Background="#FF741D1E" Margin="0,0,2,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="496*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="welcomeLabel" Content="Welcome to Student Attendance Tracker!" HorizontalAlignment="Center" Margin="264,266,230,368" VerticalAlignment="Center" Height="50" FontSize="26.667" Width="498" Foreground="#FFFFECC7"/>
        <Label x:Name="buttonGuideLabel" Content="Click &quot;Login&quot; if you are an existing user or click &quot;Register&quot; if you are a new user." HorizontalAlignment="Center" Margin="264,304,230,352" VerticalAlignment="Center" Width="498" FontSize="14" Foreground="#FFFFECC7"/>
        <Button x:Name="welcomeLoginButton" Content="Login" HorizontalAlignment="Center" Margin="410,348,496,302" VerticalAlignment="Center" Width="86" Click="welcomeLoginButton_Click" Height="34" IsDefault="True" FontWeight="Bold"/>
        <Button x:Name="welcomeRegisterButton" Content="Register" HorizontalAlignment="Center" Margin="524,348,382,302" VerticalAlignment="Center" Width="86" Height="34" Click="welcomeRegisterButton_Click" FontWeight="Bold"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="194" Margin="32,38,0,0" VerticalAlignment="Top" Width="273" Source="Resources/526342_10150749899312780_1318441028_n.jpg" Stretch="Fill"/>

    </Grid>
</Window>

<Window x:Class="StudentAttendanceTracker.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentAttendanceTracker"
        mc:Ignorable="d"
        Title="DialogBox" Height="350" Width="500" WindowState="Maximized" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center"
        Closing="DialogBox_Closing">

    <Grid Background="#FF741D1E">

        <TextBox x:Name="File_Editor"
                 HorizontalAlignment="Stretch"
                 Margin="10,44,10,10"
                 TextWrapping="Wrap"
                 VerticalAlignment="Stretch"/>
        <TextBlock x:Name="Attendance_Number_Block"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Text="Number of dates in file: "
                   VerticalAlignment="Top"
                   Margin="10,23,0,0" Width="154"/>
        <TextBlock x:Name="Number_Of_Swipes_Block" 
                   HorizontalAlignment="Left"
                   Margin="144,23,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"/>

    </Grid>
</Window>

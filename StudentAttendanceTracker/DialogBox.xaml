<Window x:Class="StudentAttendanceTracker.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentAttendanceTracker"
        mc:Ignorable="d"
        Title="DialogBox" Height="350" Width="500" WindowState="Maximized" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center"
        Closing="DialogBox_Closing">

    <Grid Background="#FF741D1E">

        <TextBox x:Name="File_Editor"
                 HorizontalAlignment="Stretch"
                 Margin="10,10,10,13"
                 TextWrapping="Wrap"
                 VerticalAlignment="Stretch"/>

    </Grid>
</Window>
